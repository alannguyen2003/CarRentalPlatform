@page
@using NuGet.Protocol
@using Microsoft.AspNetCore.Mvc.TagHelpers
@model CarRentalPlatform.Pages.AdminPage.Car.IndexModel

@{
    ViewData["Title"] = "Index";
    Layout = "Shared/_LayoutDashboard";
}

<h1>Index</h1>

<p>
    <a asp-page="Create">Create New</a>
</p>
<table class="table">
    <thead>
    <tr>
        <th>
            @Html.DisplayNameFor(model => model.CarEntity[0].Model)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.CarEntity[0].LicensePlate)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.CarEntity[0].Status)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.CarEntity[0].Brand)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.CarEntity[0].Location)
        </th>
        <th></th>
    </tr>
    </thead>
    <tbody>
    @foreach (var item in Model.CarEntity) {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.Model)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.LicensePlate)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Status)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Brand.BrandName)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Location.Address)
            </td>
            <td>
                <a asp-page="./Edit" asp-route-id="@item.Id">Edit</a> |
                <a asp-page="./Details" asp-route-id="@item.Id">Details</a> |
                <a asp-page="./Delete" asp-route-id="@item.Id">Delete</a>
            </td>
        </tr>
    }
    </tbody>
</table>
<script>
	if (@Model.IsLogin.ToJson() === false) {
		window.location.href = "/login";	
	}
</script>
