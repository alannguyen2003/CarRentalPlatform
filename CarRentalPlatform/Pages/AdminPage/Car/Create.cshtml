@page
@model CarRentalPlatform.Pages.AdminPage.Car.CreateModel
@{
    Layout = "_Layout";
}
@{
    ViewData["Title"] = "Create";
}

<h1>Create</h1>

<h4>CarEntity</h4>
<hr />
<div class="row">
    <div class="col-md-4">
        <form method="post">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <div class="form-group">
                <label asp-for="CarEntity.Model" class="control-label"></label>
                <input asp-for="CarEntity.Model" class="form-control" type="number" min="1999" step="1" />
                <span asp-validation-for="CarEntity.Model" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="CarEntity.LicensePlate" class="control-label"></label>
                <input asp-for="CarEntity.LicensePlate" class="form-control" pattern="[1-9][0-9][A-Za-z][0-9][0-9][0-9][0-9][0-9]?">
                <span asp-validation-for="CarEntity.LicensePlate" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="CarEntity.Status" class="control-label"></label>
                <select asp-for="CarEntity.Status" class="form-control">
                    <option value="1">Avalable</option>
                    <option value="0">Unavalable</option>
                </select>
                <span asp-validation-for="CarEntity.Status" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="CarEntity.BrandId" class="control-label"></label>
                <select asp-for="CarEntity.BrandId" class ="form-control" asp-items="ViewBag.BrandId"></select>
            </div>
            <div class="form-group">
                <label asp-for="CarEntity.LocationId" class="control-label"></label>
                <select asp-for="CarEntity.LocationId" class ="form-control" asp-items="ViewBag.LocationId"></select>
            </div>
            <div class="form-group">
                <input type="submit" value="Create" class="btn btn-primary" />
            </div>
        </form>
    </div>
</div>

<div>
    <a asp-page="Index">Back to List</a>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
