@page "/admin/bookings/detail"
@model CarRentalPlatform.Pages.AdminPage.BookingManagement.DetailsModel

@{
    ViewData["Title"] = "Details";
    Layout = "Shared/_LayoutAdminDashboard";
}

<main>
    <div class="container-fluid px-4">
        <h1 class="mt-4">Tables</h1>
        <ol class="breadcrumb mb-4">
            <li class="breadcrumb-item">
                <a href="/admin/index">Dashboard</a>
            </li>
            <li class="breadcrumb-item active">Bookings</li>
        </ol>
        <div class="card mb-4">
            <div class="card-body">This is a form for managing bookings of platform.</div>
        </div>
        <div class="card mb-4">
            <div class="card-header">
                Booking detail
            </div>
            <form method="post" class="m-4">
                <div class="form-floating mb-3">
                    <input asp-for="BookingAdmin.CustomerFirstName" class="form-control" id="inputEmail" type="text" placeholder="name@example.com" disabled />
                    <label for="inputEmail">Customer</label>
                </div>
                <div class="form-floating mb-3">
                    <input asp-for="BookingAdmin.StartDate" class="form-control" id="inputEmail" type="text" value="" placeholder="name@example.com" disabled />
                    <label for="inputEmail">Booking date</label>
                </div>
                <div class="form-floating mb-3">
                    <input asp-for="BookingAdmin.EndDate" class="form-control" id="inputEmail" type="text" value="" placeholder="name@example.com" disabled />
                    <label for="inputEmail">Return date</label>
                </div>
                <div class="form-floating mb-3">
                    <input asp-for="BookingAdmin.Feedback" class="form-control" id="inputEmail" type="text" value="" placeholder="name@example.com" disabled />
                    <label for="inputEmail">Feedback</label>
                </div>
                <div class="form-floating mb-3">
                    <input asp-for="BookingAdmin.Note" class="form-control" id="inputEmail" type="text" value="" placeholder="name@example.com" disabled />
                    <label for="inputEmail">Note</label>
                </div>
                <div class="form-floating mb-3">
                    <input asp-for="BookingAdmin.DepositAmount" class="form-control" id="inputEmail" type="text" value="" placeholder="name@example.com" disabled />
                    <label for="inputEmail">Deposit Amount</label>
                </div>
                <div class="form-floating mb-3">
                    <input asp-for="BookingAdmin.TotalAmount" class="form-control" id="inputEmail" type="text" value="" placeholder="name@example.com" disabled />
                    <label for="inputEmail">Total Amount</label>
                </div>
                <div class="form-floating mb-3">
                    <input asp-for="BookingAdmin.CarModel" class="form-control" id="inputEmail" type="text" value="" placeholder="name@example.com" disabled />
                    <label for="inputEmail">Car model</label>
                </div>
                <div class="form-floating mb-3">
                    <input asp-for="BookingAdmin.LicensePlate" class="form-control" id="inputEmail" type="text" value="" placeholder="name@example.com" disabled />
                    <label for="inputEmail">License plate</label>
                </div>
                @* <div class="d-flex align-items-center justify-content-between mt-4 mb-0">
                    <p style="color: red;">Do you you want to edit?</p>
                    <button type="submit" class="btn btn-danger">Edit</button>
                </div> *@
            </form>
        </div>
    </div>
</main>