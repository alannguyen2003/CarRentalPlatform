@page "/admin/cars/detail"
@model CarRentalPlatform.Pages.AdminPage.CarManagement.Detail

@{
    Layout = "Shared/_LayoutAdminDashboard";
}

<main>
    <div class="container-fluid px-4">
        <h1 class="mt-4">Tables</h1>
        <ol class="breadcrumb mb-4">
            <li class="breadcrumb-item">
                <a href="/admin/index">Dashboard</a>
            </li>
            <li class="breadcrumb-item active">Accounts</li>
        </ol>
        <div class="card mb-4">
            <div class="card-body">This is a form for managing accounts of platform.</div>
        </div>
        <div class="card mb-4">
            <div class="card-header">
                Detail
            </div>
            <form method="post" class="m-4">
                <div class="form-floating mb-3">
                    <input class="form-control" id="inputEmail" type="text" value="@Model.CarResponse.Model" placeholder="name@example.com" disabled/>
                    <label for="inputEmail">Model</label>
                </div>
                <div class="form-floating mb-3">
                    <input class="form-control" id="inputEmail" type="text" value="@Model.CarResponse.Brand" placeholder="name@example.com" disabled/>
                    <label for="inputEmail">Brand</label>
                </div>
                <div class="form-floating mb-3">
                    <input class="form-control" id="inputEmail" type="text" value="@Model.CarResponse.LicensePlate" placeholder="name@example.com" disabled/>
                    <label for="inputEmail">License Plate</label>
                </div>
                <div class="form-floating mb-3">
                    <img src="@Model.CarResponse.ThumbnailImage" />
                </div>
                <div class="form-floating mb-3">
                    <input class="form-control" id="inputEmail" type="text" value="@Model.CarResponse.Status" placeholder="name@example.com" disabled/>
                    <label for="inputEmail">Status</label>
                </div>
                <div class="form-floating mb-3">
                    <input class="form-control" id="inputEmail" type="text" value="@Model.CarResponse.PricePerDay" placeholder="name@example.com" disabled/>
                    <label for="inputEmail">Price</label>
                </div>
                <div class="form-floating mb-3">
                    <input class="form-control" id="inputEmail" type="text" value="@Model.CarResponse.Description" placeholder="name@example.com" disabled/>
                    <label for="inputEmail">Description</label>
                </div>
                <div class="d-flex align-items-center justify-content-between mt-4 mb-0">
                    <p style="color: red;">Do you you want to edit?</p>
                    <button type="submit" class="btn btn-danger">Edit</button>
                </div>
            </form>
        </div>
    </div>
</main>