	<script>
		function daysBetween(time1, time2) {
          const date1 = new Date(time1);
          const date2 = new Date(time2);
          const timeDiff = Math.abs(date2.getTime() - date1.getTime());
		  const days = Math.floor(timeDiff / (1000 * 60 * 60 * 24));
          return days;
        }
		
		function handleInputStartDate() {
			const startDate = document.getElementById("book_pick_date").value;
			const endDate = document.getElementById("drop_off_date").value;
			if (startDate != null || endDate != null) {
            	const rentingDays = document.getElementById("renting_days");
				const total = document.getElementById("total");
            	const days = daysBetween(startDate, endDate);
				if (isNaN(typeof days)) {
					rentingDays.innerHTML = days + "";
					total.innerHTML = "$" + @Model.CartModel.Car.PricePerDay * days;
				}
       		}
		}
		function handleInputEndDate() {
        	const startDate = document.getElementById("book_pick_date").value;
       		const endDate = document.getElementById("drop_off_date").value;
			if (startDate != null || endDate != null) {
				const rentingDays = document.getElementById("renting_days");
                const days = daysBetween(startDate, endDate);
				const total = document.getElementById("total");
                if (isNaN(typeof days)) {
                	rentingDays.innerHTML = days + "";
					total.innerHTML = "$" + @Model.CartModel.Car.PricePerDay * days;
                }
			}
      	}
	</script>
